<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Sound2Light.Services.UI">

    <Style x:Key="BaseUnitStyle" TargetType="UserControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="UserControl">
                    <Border BorderBrush="#333"
                            BorderThickness="3"
                            CornerRadius="4"
                            Background="Transparent"
                            Margin="4">

                        <Grid Background="Transparent">
                            <!-- Fixe 3x3-Grid-Struktur -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>

                            <!-- 🔩 TOP LEFT -->
                            <Grid Grid.Row="0" Grid.Column="0" Margin="4"
                                  ui:RotationScrewService.InitializeRandomRotation="True">
                                <Grid Width="20" Height="20">
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="#EEE" Offset="0.0"/>
                                                <GradientStop Color="#AAA" Offset="0.6"/>
                                                <GradientStop Color="#555" Offset="1.0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Stroke>
                                            <SolidColorBrush Color="Black"/>
                                        </Ellipse.Stroke>
                                        <Ellipse.StrokeThickness>0.8</Ellipse.StrokeThickness>
                                    </Ellipse>
                                    <Grid RenderTransformOrigin="0.5,0.5">
                                        <Rectangle Width="12" Height="2" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Rectangle Width="2" Height="12" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- 🔩 TOP RIGHT -->
                            <Grid Grid.Row="0" Grid.Column="2" Margin="4"
                                  ui:RotationScrewService.InitializeRandomRotation="True">
                                <Grid Width="20" Height="20">
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="#EEE" Offset="0.0"/>
                                                <GradientStop Color="#AAA" Offset="0.6"/>
                                                <GradientStop Color="#555" Offset="1.0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Stroke>
                                            <SolidColorBrush Color="Black"/>
                                        </Ellipse.Stroke>
                                        <Ellipse.StrokeThickness>0.8</Ellipse.StrokeThickness>
                                    </Ellipse>
                                    <Grid RenderTransformOrigin="0.5,0.5">
                                        <Rectangle Width="12" Height="2" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Rectangle Width="2" Height="12" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- 🔩 BOTTOM LEFT -->
                            <Grid Grid.Row="2" Grid.Column="0" Margin="4"
                                  ui:RotationScrewService.InitializeRandomRotation="True">
                                <Grid Width="20" Height="20">
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="#EEE" Offset="0.0"/>
                                                <GradientStop Color="#AAA" Offset="0.6"/>
                                                <GradientStop Color="#555" Offset="1.0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Stroke>
                                            <SolidColorBrush Color="Black"/>
                                        </Ellipse.Stroke>
                                        <Ellipse.StrokeThickness>0.8</Ellipse.StrokeThickness>
                                    </Ellipse>
                                    <Grid RenderTransformOrigin="0.5,0.5">
                                        <Rectangle Width="12" Height="2" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Rectangle Width="2" Height="12" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- 🔩 BOTTOM RIGHT -->
                            <Grid Grid.Row="2" Grid.Column="2" Margin="4"
                                  ui:RotationScrewService.InitializeRandomRotation="True">
                                <Grid Width="20" Height="20">
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="#EEE" Offset="0.0"/>
                                                <GradientStop Color="#AAA" Offset="0.6"/>
                                                <GradientStop Color="#555" Offset="1.0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Stroke>
                                            <SolidColorBrush Color="Black"/>
                                        </Ellipse.Stroke>
                                        <Ellipse.StrokeThickness>0.8</Ellipse.StrokeThickness>
                                    </Ellipse>
                                    <Grid RenderTransformOrigin="0.5,0.5">
                                        <Rectangle Width="12" Height="2" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Rectangle Width="2" Height="12" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- 🧩 CONTENT-BEREICH -->
                            <Border Grid.Row="1" Grid.Column="1"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    CornerRadius="4"
                                    ClipToBounds="True">
                                <ContentPresenter />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
