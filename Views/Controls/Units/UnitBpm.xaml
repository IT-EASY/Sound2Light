<UserControl x:Class="Sound2Light.Views.Controls.Units.UnitBpm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{StaticResource BaseUnitStyle}">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Werteanzeige -->
            <RowDefinition Height="Auto"/>
            <!-- Labels -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- BPM original -->
            <ColumnDefinition Width="Auto"/>
            <!-- Button -->
            <ColumnDefinition Width="Auto"/>
            <!-- Divisor -->
            <ColumnDefinition Width="Auto"/>
            <!-- BPM ÷ Divisor -->
        </Grid.ColumnDefinitions>

        <!-- Zeile 0: Werte -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="128"
                   FontFamily="Consolas" FontSize="18"
                   Foreground="LimeGreen" HorizontalAlignment="Center" Margin="5"/>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="÷2"
                   FontSize="14" Background="DarkSlateGray"
                   Foreground="White" Padding="6,2" Margin="5"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="0" Grid.Column="2" Text="02"
                   FontFamily="Consolas" FontSize="18"
                   Foreground="Aqua" HorizontalAlignment="Center" Margin="5"/>

        <TextBlock Grid.Row="0" Grid.Column="3" Text="064"
                   FontFamily="Consolas" FontSize="18"
                   Foreground="Orange" HorizontalAlignment="Center" Margin="5"/>

        <!-- Zeile 1: Labels -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="BPM"
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text=""
                   FontSize="10" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="Div"
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="3" Text="Result"
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
